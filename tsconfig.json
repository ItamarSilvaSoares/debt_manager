{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "resolveJsonModule": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "sourceMap": true,
    "rootDir": ".",
    "outDir": "./dist",
    "allowJs": true
  },
  "include": [
    "src/**/*.ts",
    "src/tests/**/*.ts",
  ],
  "exclude": [
    "node_modules",
  ]
}
